{
  "manifest_version": 3,
  "name": "SOQL List Formatter",
  "version": "1.0",
  "description": "Format a list of values for Salesforce SOQL queries.",
  "permissions": ["clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup_height": 500,
    "default_popup_width": 400
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
